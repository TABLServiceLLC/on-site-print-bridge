JWT_SECRET=replace-with-your-secret
JWT_TOKEN=replace-with-a-valid-jwt

# Optional discovery and polling configuration
SUBNET=
DISCOVERY_INTERVAL_MS=300000
# Leave PRINT_JOBS_URL unset to disable background polling.
# PRINT_JOBS_URL=https://api.example.com/print-jobs
